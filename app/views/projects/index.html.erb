<h1>プロジェクト一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>プロジェクト名</th>
      <th>担当者</th>
      <th>連絡先</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @projects.each do |project| %>
      <tr>
      <td><%= project.name %></td>
      <td><%= project.person_in_charge %></td>
      <td><%= project.contact_address %></td>
      <td><%= link_to '詳細', project, class: 'btn btn-info' %></td>
      <td><%= link_to '編集', edit_project_path(project), class: 'btn btn-primary' %></td>
      <td><%= link_to '削除', project, method: :delete, data: { confirm: '削除しますか？' }, class: 'btn btn-danger' %></td>
  </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいプロジェクト', new_project_path, class: 'btn btn-primary' %>
