<div class="col-md-8">
    <h1><%= @rss_entry.title %></h1>
    <p><%= raw(@rss_entry.content) %></p>
    <%= form_for(@rss_entry, url: package_rss_entry_path(@rss_entry), method: "post", html: { class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
        <%= f.label "info_type", "情報の種類", class: "col-md-2 control-label" %>
        <div class="col-md-6">
           <%= f.select :info_type, {"バグ修正のみ" => "bugfix", "脆弱性含む" => "vulnerability", "一般情報" => "general_info"}, {}, class: "form-control" %>
        </div>
    </div>
        <div class="form-group">
        <%= label_tag "info_target", "情報の対象", class: "col-md-2 control-label" %>
        <div class="col-md-6">
           <%= select_tag "info_target", options_for_select({"Ruby" => "Ruby", "Rails" => "Rails", "JRuby" => "JRuby"}), multiple: true, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <%= f.submit '情報提供', class: 'btn btn-primary' %>
        <%= link_to '既読', rss_entry_path(@rss_entry), method: :delete, data: { confirm: '既読にしますか？' }, class: 'btn btn-danger' %>
    </div>
<% end %>
</div>
